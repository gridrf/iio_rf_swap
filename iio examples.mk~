IIO_EXAMPLES_VERSION = 0.1
IIO_EXAMPLES_SITE = output/build/libiio-0.17/examples
IIO_EXAMPLES_SITE_METHOD = local
IIO_EXAMPLES_LICENSE = GPLv2
IIO_EXAMPLES_LICENSE_FILES = LICENSE
IIO_EXAMPLES_DEPENDENCIES = libiio

define IIO_EXAMPLES_BUILD_CMDS
	$(TARGET_CC) $(TARGET_CFLAGS) $(TARGET_LDFLAGS) \
		$(@D)/ad9361-iiostream.c -o $(@D)/ad9361-iiostream -lm -lpthread -liio
endef

define IIO_EXAMPLES_INSTALL_TARGET_CMDS
	$(INSTALL) -D -m 755 $(@D)/ad9361-iiostream $(TARGET_DIR)/usr/sbin/ad9361-iiostream
endef

$(eval $(generic-package))
